# ===== APPLICATION CONFIGURATION =====
VITE_APP_NAME=Stargazer
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# ===== API CONFIGURATION =====
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=10000
VITE_API_VERSION=v1

# ===== WEBSOCKET CONFIGURATION =====
VITE_WS_URL=ws://localhost:8080
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# ===== AUTHENTICATION =====
VITE_AUTH_TOKEN_STORAGE_KEY=stargazer_token
VITE_AUTH_REFRESH_TOKEN_STORAGE_KEY=stargazer_refresh_token
VITE_AUTH_TOKEN_EXPIRY_THRESHOLD=300000

# ===== MONITORING & LOGGING =====
VITE_ENABLE_ERROR_TRACKING=true
VITE_SENTRY_DSN=
VITE_LOG_LEVEL=warn

# ===== FEATURE FLAGS =====
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_ANALYTICS=false

# ===== TENANT CONFIGURATION =====
VITE_DEFAULT_TENANT_ID=
VITE_MULTI_TENANT_MODE=true

# ===== SECURITY =====
VITE_ENABLE_CSP=true
VITE_SESSION_TIMEOUT=3600000
VITE_REQUIRE_HTTPS=false

# ===== GAMING PLATFORM SPECIFIC =====
VITE_REFRESH_INTERVAL_METRICS=5000
VITE_REFRESH_INTERVAL_ALERTS=10000
VITE_MAX_ALERT_RETENTION_HOURS=24

# ===== API KEYS & CREDENTIALS =====
# SECURITY WARNING: These are used for server-side proxy authentication only
# Never expose actual API keys in the frontend bundle - use Vite proxy in dev
# In production, use backend/BFF to handle API authentication securely

# Option 1: Plain text credentials (development only)
VITE_VPB_API_KEY=your_vpb_api_key_here
VITE_VPB_API_SECRET=your_vpb_api_secret_here
VITE_GAMING_API_CLIENT_ID=your_gaming_api_client_id_here
VITE_GAMING_API_CLIENT_SECRET=your_gaming_api_client_secret_here

# Option 2: Encrypted credentials (recommended for production)
# Use the credential encryption tool to generate these values
# VITE_VPB_API_KEY={"encrypted":"...","iv":"...","salt":"...","algorithm":"AES-GCM"}
# VITE_VPB_API_SECRET={"encrypted":"...","iv":"...","salt":"...","algorithm":"AES-GCM"}
# VITE_GAMING_API_CLIENT_ID={"encrypted":"...","iv":"...","salt":"...","algorithm":"AES-GCM"}
# VITE_GAMING_API_CLIENT_SECRET={"encrypted":"...","iv":"...","salt":"...","algorithm":"AES-GCM"}

# ===== ENCRYPTION CONFIGURATION =====
# Master password for decrypting credentials
VITE_CREDENTIAL_MASTER_PASSWORD=your_secure_master_password_here
# Alternative deployment key (CI/CD systems)
VITE_DEPLOYMENT_KEY=your_deployment_encryption_key_here
# Enable/disable credential encryption
VITE_ENABLE_CREDENTIAL_ENCRYPTION=true